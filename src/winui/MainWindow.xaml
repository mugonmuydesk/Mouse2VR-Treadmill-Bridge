<Window x:Class="Mouse2VR.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="using:Mouse2VR"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Mouse2VR Treadmill Bridge - WinUI 3">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Grid.Row="0" 
                   Text="Mouse2VR Treadmill Bridge" 
                   Style="{StaticResource TitleTextBlockStyle}"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20"/>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="200"/>
            </Grid.ColumnDefinitions>

            <!-- Status Panel -->
            <StackPanel Grid.Column="0" Spacing="10">
                <TextBlock Text="Status" Style="{StaticResource SubtitleTextBlockStyle}"/>
                <Border BorderBrush="{ThemeResource SystemControlForegroundBaseMediumLowBrush}" 
                        BorderThickness="1" 
                        Padding="10"
                        CornerRadius="4">
                    <StackPanel Spacing="5">
                        <TextBlock x:Name="StatusText" Text="Status: Initializing..."/>
                        <TextBlock x:Name="SpeedText" Text="Speed: 0.0 m/s"/>
                        <TextBlock x:Name="StickText" Text="Stick: 0%"/>
                        <TextBlock x:Name="UpdateRateText" Text="Update Rate: 0 Hz"/>
                    </StackPanel>
                </Border>
            </StackPanel>

            <!-- Input Graph -->
            <Border Grid.Column="1" 
                    BorderBrush="{ThemeResource SystemControlForegroundBaseMediumLowBrush}" 
                    BorderThickness="1"
                    Margin="10,30,10,0"
                    CornerRadius="4">
                <Canvas x:Name="GraphCanvas" Background="Black"/>
            </Border>

            <!-- Stick Position -->
            <Border Grid.Column="2" 
                    BorderBrush="{ThemeResource SystemControlForegroundBaseMediumLowBrush}" 
                    BorderThickness="1"
                    Margin="0,30,0,0"
                    CornerRadius="4">
                <Canvas x:Name="StickCanvas" Background="DarkGray"/>
            </Border>
        </Grid>

        <!-- Settings -->
        <Expander Grid.Row="2" 
                  Header="Settings" 
                  Margin="0,20,0,0"
                  HorizontalAlignment="Stretch"
                  HorizontalContentAlignment="Stretch">
            <StackPanel Spacing="15" Margin="0,10,0,0">
                <!-- Sensitivity -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="60"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="Sensitivity:" VerticalAlignment="Center"/>
                    <Slider Grid.Column="1" 
                            x:Name="SensitivitySlider" 
                            Minimum="0.1" 
                            Maximum="3.0" 
                            Value="1.0"
                            StepFrequency="0.1"
                            Margin="10,0"/>
                    <TextBox Grid.Column="2" 
                             x:Name="SensitivityValue" 
                             Text="{x:Bind SensitivitySlider.Value, Mode=TwoWay}"
                             IsReadOnly="True"/>
                </Grid>

                <!-- Update Rate -->
                <StackPanel>
                    <TextBlock Text="Update Rate:" Margin="0,0,0,5"/>
                    <RadioButtons x:Name="UpdateRateRadio" SelectedIndex="1">
                        <RadioButton Content="30 Hz" Tag="33"/>
                        <RadioButton Content="50 Hz" Tag="20"/>
                        <RadioButton Content="60 Hz" Tag="16"/>
                        <RadioButton Content="100 Hz" Tag="10"/>
                    </RadioButtons>
                </StackPanel>

                <!-- Options -->
                <StackPanel Spacing="10">
                    <CheckBox x:Name="InvertYCheck" Content="Invert Y Axis"/>
                    <CheckBox x:Name="LockXCheck" Content="Lock X Axis" IsChecked="True"/>
                    <CheckBox x:Name="AdaptiveCheck" Content="Adaptive Mode"/>
                </StackPanel>

                <!-- Apply Button -->
                <Button x:Name="ApplyButton" 
                        Content="Apply Settings" 
                        Click="OnApplySettings"
                        HorizontalAlignment="Stretch"
                        Style="{StaticResource AccentButtonStyle}"/>
            </StackPanel>
        </Expander>
    </Grid>
</Window>